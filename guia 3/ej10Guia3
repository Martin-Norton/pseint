FinAlgoritmo


funcion retorno <- calculo(n)
	
	Definir a, b, c, retorno Como Entero
	
	a = trunc(n/100)%10
	b = trunc(n/10)%10
	c = n%10
	
	
	Si Longitud(ConvertirATexto(n)) = 3 Entonces
		retorno = a+b+c
	FinSi
	Si Longitud(ConvertirATexto(n)) = 2 Entonces
		retorno = b+c
	FinSi
	
	
	
	
FinFuncion
